{
    "app-id": "dev.hyvanila.HyVanila",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.golang",
        "org.freedesktop.Sdk.Extension.node18"
    ],
    "command": "HyVanila",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--env=XDG_CURRENT_DESKTOP=GNOME"
    ],
    "modules": [
        {
            "name": "webkit2gtk-4.0",
            "buildsystem": "simple",
            "build-commands": [],
            "sources": []
        },
        {
            "name": "HyVanila",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 HyVanila /app/bin/HyVanila",
                "install -Dm644 dev.hyvanila.HyVanila.png /app/share/icons/hicolor/256x256/apps/dev.hyvanila.HyVanila.png",
                "install -Dm644 dev.hyvanila.HyVanila.desktop /app/share/applications/dev.hyvanila.HyVanila.desktop",
                "install -Dm644 dev.hyvanila.HyVanila.metainfo.xml /app/share/metainfo/dev.hyvanila.HyVanila.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "HyVanila"
                },
                {
                    "type": "file",
                    "path": "dev.hyvanila.HyVanila.png"
                },
                {
                    "type": "file",
                    "path": "dev.hyvanila.HyVanila.desktop"
                },
                {
                    "type": "file",
                    "path": "dev.hyvanila.HyVanila.metainfo.xml"
                }
            ]
        }
    ]
}