<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>dev.hyvanila.HyVanila</id>
  <name>HyVanila</name>
  <summary>A modern launcher for Hytale</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  
  <description>
    <p>
      HyVanila is an open-source, community-driven launcher for Hytale that provides
      advanced mod management, multiple game instances, and seamless updates.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Mod Manager with CurseForge integration</li>
      <li>Multiple game instances with different versions</li>
      <li>Easy mod enable/disable with version switching</li>
      <li>Automatic game and launcher updates</li>
      <li>Modern, beautiful interface</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">dev.hyvanila.HyVanila.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <caption>HyVanila main launcher interface</caption>
      <image>https://raw.githubusercontent.com/7osteradev/HyVanila/main/assets/screenshot.png</image>
    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/7osteradev/HyVanila</url>
  <url type="bugtracker">https://github.com/7osteradev/HyVanila/issues</url>
  
  <developer_name>HyVanila Team</developer_name>
  
  <provides>
    <binary>HyVanila</binary>
  </provides>
  
  <categories>
    <category>Game</category>
  </categories>
  
  <keywords>
    <keyword>hytale</keyword>
    <keyword>launcher</keyword>
    <keyword>gaming</keyword>
    <keyword>mods</keyword>
    <keyword>game</keyword>
  </keywords>
  
  <content_rating type="oars-1.1" />
  
  <releases>
    <release version="1.0.0" date="2025-01-01">
      <description>
        <p>Initial release of HyVanila launcher</p>
      </description>
    </release>
  </releases>
  
  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
  </recommends>
  
  <requires>
    <display_length compare="ge">768</display_length>
  </requires>
</component>
